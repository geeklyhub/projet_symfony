{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

    {% for article in articles %} {#Ici je vais lister l'ensemble des articles grâce à ma boucle For#}
        <p>
        <hr>
        <article>
            <h2>{{ article.title }}</h2>
            <div class="metadata"> Ecrit le {{ article.createdAt|date("d/m/Y") }} à {{ article.createdAt|date("H:i") }}
                dans la catégorie Informatique
            </div>
            <div class="content"><img src="{{ article.image }}" alt="">
                <p>
                    {{ article.content|raw }}
                </p><a href="{{ path('article_show',{'id':article.id}) }}" class="btn btn-primary">Lire la suite</a>
            </div>
        </article></p>
        <p>
        <br>
    {% endfor %}

{% endblock %}